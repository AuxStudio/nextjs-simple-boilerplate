{
  "name": "nextjs-simple-boilerplate",
  "version": "1.1.0",
  "description": "A Next.js, Firebase and Redux boilerplate that we use internally",
  "main": "index.js",
  "repository": "https://github.com/AuxStudio/nextjs-simple-boilerplate",
  "author": "shaunsaker <shaun@aux.co.za>",
  "license": "MIT",
  "scripts": {
    "dev": "next dev src/app",
    "build": "next build src/app",
    "start": "next start src/app",
    "export": "next export src/app --outdir dist",
    "postexport": "yarn run makeassets",
    "makeassets": "node ./src/scripts/makeAssets.js",
    "postmakeassets": "yarn run copyassets",
    "copyassets": "cp -a ./src/public/. ./dist/",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "test": "jest",
    "update-changelog": "yarn run auto-changelog && git add . && git commit -m 'Update Changelog' && git push",
    "update-tags": "PACKAGE_VERSION=$(cat package.json | grep \\\"version\\\" | head -1 | awk -F: '{ print $2 }' | sed 's/[\",]//g' | tr -d '[[:space:]]') && git tag v$PACKAGE_VERSION && git push --tags",
    "publish": "yarn run update-changelog && yarn run update-tags"
  },
  "devDependencies": {
    "@babel/core": "^7.3.4",
    "@storybook/addon-actions": "^5.0.3",
    "@storybook/addon-links": "^5.0.3",
    "@storybook/addons": "^5.0.3",
    "@storybook/react": "^5.0.3",
    "auto-changelog": "^1.12.1",
    "babel-core": "^6.26.3",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^24.5.0",
    "babel-loader": "^8.0.5",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "eslint": "^5.15.1",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-aux": "^1.1.1",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-react": "^7.12.4",
    "express": "^4.16.4",
    "jest": "^24.5.0",
    "prettier": "^1.16.4",
    "prettier-config-aux": "^1.0.1",
    "react-test-renderer": "^16.8.4"
  },
  "dependencies": {
    "@material-ui/core": "^3.9.2",
    "@material-ui/icons": "^3.0.2",
    "autoprefixer": "^9.4.10",
    "dotenv": "^7.0.0",
    "firebase": "^5.8.6",
    "js-simple-utils": "^1.0.5",
    "next": "^8.0.3",
    "next-compose-plugins": "^2.1.1",
    "next-fonts": "^0.17.0",
    "next-images": "^1.1.1",
    "next-redux-saga": "^4.0.1",
    "next-redux-wrapper": "^3.0.0-alpha.2",
    "notistack": "^0.5.1",
    "path": "^0.12.7",
    "prop-types": "^15.7.2",
    "react": "^16.8.4",
    "react-dom": "^16.8.4",
    "react-ga": "^2.5.7",
    "react-redux": "^6.0.1",
    "redux": "^4.0.1",
    "redux-logger": "^3.0.6",
    "redux-persist": "^5.10.0",
    "redux-saga": "^1.0.2"
  },
  "auto-changelog": {
    "output": "CHANGELOG.md",
    "template": "keepachangelog",
    "unreleased": true,
    "commitLimit": false
  }
}
